interface Props {
    id: string
    name: string
    url: string
}

const { name, id, url } = Astro.props
const href = url.replace(/\{id\}/, id)

---

<div title={name}>
    <Link href={href} >
        <Svg id={name} class='text-2xl text-gray-600 hover:text-sky-400' client:only="solid"/>
    </Link>
</div>