---
import Link from './link.astro'

interface Props {
    data: {
        name: string
        url: string
        avatar: string
        description: string
    }
    className?: string
}

const { className = '' } = Astro.props
const { name, url, avatar, description } = Astro.props.data
---

<div
    class={'p-4 text-center hover:bg-[--friend-card-hover-bg-color] ' +
        className}
>
    <Link href={url}>
        <img
            class='m-auto'
            src={avatar}
            alt='avatar'
            width={100}
            height={100}
        />
        <div
            class='mt-4 text-sm font-medium text-[--accent-text-color] truncate'
            title={name}
        >
            {name}
        </div>
        <div
            class='text-xs font-medium text-[--minor-text-color] truncate'
            title={description}
        >
            {description}
        </div>
    </Link>
</div>
